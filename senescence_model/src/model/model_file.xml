<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="FLAMEGPU_vcproj.xslt"?>
<gpu:xmodel xmlns:gpu="http://www.dcs.shef.ac.uk/~paul/XMMLGPU" xmlns="http://www.dcs.shef.ac.uk/~paul/XMML">
    <name>SenescenceModel</name>
    <gpu:environment>
        <gpu:constants>
            <gpu:variable>
                <type>float</type>
                <name>TISSUE_DAMAGE_PROB</name>
            </gpu:variable>
            <gpu:variable>
                <type>float</type>
                <name>EARLY_SENESCENT_MIGRATION_SCALE</name>
            </gpu:variable>
            <gpu:variable>
                <type>float</type>
                <name>SENESCENT_MIGRATION_SCALE</name>
            </gpu:variable>
            <gpu:variable>
                <type>float</type>
                <name>QUIESCENT_MIGRATION_SCALE</name>
            </gpu:variable>
            <gpu:variable>
                <type>float</type>
                <name>PROLIFERATION_PROB</name>
            </gpu:variable>
            <gpu:variable>
                <type>float</type>
                <name>BYSTANDER_DISTANCE</name>
            </gpu:variable>
            <gpu:variable>
                <type>float</type>
                <name>BYSTANDER_PROB</name>
            </gpu:variable>
            <gpu:variable>
                <type>int</type>
                <name>EXCESSIVE_DAMAGE_AMOUNT</name>
            </gpu:variable>
            <gpu:variable>
                <type>float</type>
                <name>EXCESSIVE_DAMAGE_PROB</name>
            </gpu:variable>
            <gpu:variable>
                <type>int</type>
                <name>REPLICATIVE_SEN_AGE</name>
            </gpu:variable>
            <gpu:variable>
                <type>float</type>
                <name>REPLICATIVE_SEN_PROB</name>
            </gpu:variable>
            <gpu:variable>
                <type>int</type>
                <name>EARLY_SENESCENT_MATURATION_TIME</name>
            </gpu:variable>
            <gpu:variable>
                <type>float</type>
                <name>TRANSITION_TO_FULL_SENESCENCE_PROB</name>
            </gpu:variable>
            <gpu:variable>
                <type>float</type>
                <name>CLEARANCE_EARLY_SEN_PROB</name>
            </gpu:variable>
            <gpu:variable>
                <type>float</type>
                <name>CLEARANCE_SEN_PROB</name>
            </gpu:variable>
            <gpu:variable>
                <type>float</type>
                <name>REPAIR_RADIUS</name>
            </gpu:variable>
        </gpu:constants>
        <gpu:functionFiles>
            <file>functions.c</file>
        </gpu:functionFiles>
        <gpu:initFunctions>
            <gpu:initFunction>
                <gpu:name>setConstants</gpu:name>
            </gpu:initFunction>
        </gpu:initFunctions>
    </gpu:environment>
    <xagents>
        <gpu:xagent>
            <name>TissueBlock</name>
            <memory>
                <gpu:variable>
                    <type>int</type>
                    <name>id</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>x</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>y</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>z</name>
                </gpu:variable>
                <gpu:variable>
                    <type>int</type>
                    <name>damage</name>
                </gpu:variable>
            </memory>
            <functions>
                <gpu:function>
                    <name>TissueTakesDamage</name>
                    <description>Function to add damage to tissue block</description>
                    <currentState>default</currentState>
                    <nextState>default</nextState>
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>true</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>TissueSendDamageReport</name>
                    <description>Tissue send damage message</description>
                    <currentState>default</currentState>
                    <nextState>default</nextState>
                    <outputs>
                        <gpu:output>
                            <messageName>tissue_damage_report</messageName>
                            <gpu:type>single_message</gpu:type>
                        </gpu:output>
                    </outputs>                         <!-- optional -->
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>false</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>ReapirDamage</name>
                    <description>Repair some of the damage if reparing fibroblast is near</description>
                    <currentState>default</currentState>
                    <nextState>default</nextState>
                    <inputs>
                        <gpu:input>
                            <messageName>fibroblast_location_report</messageName>
                        </gpu:input>
                    </inputs>                         <!-- optional -->
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>false</gpu:RNG>                        <!-- optional -->
                </gpu:function>
            </functions>
            <states>
                <gpu:state>
                    <name>default</name>
                    <description>Patch of dermal tissue</description>
                </gpu:state>
                <initialState>default</initialState>
            </states>
            <gpu:type>continuous</gpu:type>
            <gpu:bufferSize>1024</gpu:bufferSize>
        </gpu:xagent>
        <gpu:xagent>
            <name>Fibroblast</name>
            <memory>
                <gpu:variable>
                    <type>int</type>
                    <name>id</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>x</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>y</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>z</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>doublings</name>
                </gpu:variable>
                <gpu:variable>
                    <type>int</type>
                    <name>damage</name>
                </gpu:variable>
                <gpu:variable>
                    <type>int</type>
                    <name>early_sen_time_counter</name>
                </gpu:variable>
                <gpu:variable>
                    <type>int</type>
                    <!--0: quiescent-->
                    <!--1: early senescent-->
                    <!--2: senescent-->
                    <!--4: proliferating-->
                    <!--5: repairing-->
                    <name>current_state</name>
                </gpu:variable>
                <gpu:variable>
                    <type>int</type>
                    <name>colour</name>
                </gpu:variable>
            </memory>
            <functions>
                <gpu:function>
                    <name>QuiescentMigration</name>
                    <description>Movement of quiescent cells</description>
                    <currentState>Quiescent</currentState>
                    <nextState>Quiescent</nextState>
                    <inputs>
                        <gpu:input>
                            <messageName>tissue_damage_report</messageName>
                        </gpu:input>
                    </inputs>                           <!-- optional -->
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>false</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>SenescentMigration</name>
                    <description>Movement of early senescent cells</description>
                    <currentState>Senescent</currentState>
                    <nextState>Senescent</nextState>
                    <inputs>
                        <gpu:input>
                            <messageName>tissue_damage_report</messageName>
                        </gpu:input>
                    </inputs>                           <!-- optional -->
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>false</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>EarlySenescentMigration</name>
                    <description>Movement of early senescent cells</description>
                    <currentState>EarlySenescent</currentState>
                    <nextState>EarlySenescent</nextState>
                    <inputs>
                        <gpu:input>
                            <messageName>tissue_damage_report</messageName>
                        </gpu:input>
                    </inputs>                           <!-- optional -->
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>false</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>QuiescentTakesDamage</name>
                    <description>Quiescent fibroblasts randomly take damage</description>
                    <currentState>Quiescent</currentState>
                    <nextState>Quiescent</nextState>
                    <inputs>
                        <gpu:input>
                            <messageName>fibroblast_damage_report</messageName>
                        </gpu:input>
                    </inputs>
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>true</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>QuiescentSendDamageReport</name>
                    <description>Quiescent report their damage status</description>
                    <currentState>Quiescent</currentState>
                    <nextState>Quiescent</nextState>
                    <outputs>
                        <gpu:output>
                            <messageName>fibroblast_damage_report</messageName>
                            <gpu:type>single_message</gpu:type>
                        </gpu:output>
                    </outputs>                           <!-- optional -->
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>true</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>TransitionToProliferating</name>
                    <description>Quiescent transitions to proliferating fibroblast</description>
                    <currentState>Quiescent</currentState>
                    <nextState>Proliferating</nextState>
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>true</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>Proliferation</name>
                    <description>Cell divides and returns to quiescent</description>
                    <currentState>Proliferating</currentState>
                    <nextState>Quiescent</nextState>
                    <xagentOutputs>
                        <gpu:xagentOutput>
                            <xagentName>Fibroblast</xagentName>
                            <state>Quiescent</state>
                        </gpu:xagentOutput>
                    </xagentOutputs>
                    <gpu:reallocate>true</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>false</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>BystanderEffect</name>
                    <description>Senescent cells influence non-senescent cells to become senescent</description>
                    <currentState>Quiescent</currentState>
                    <nextState>EarlySenescent</nextState>
                    <inputs>
                        <gpu:input>
                            <messageName>fibroblast_location_report</messageName>
                        </gpu:input>
                    </inputs>                           <!-- optional --><!-- optional -->
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>true</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>ExcessiveDamage</name>
                    <description>Once a threshold is reached a quiescent cell turns to early senescent</description>
                    <currentState>Quiescent</currentState>
                    <nextState>EarlySenescent</nextState>
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>true</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>ReplicativeSenescence</name>
                    <description>Cells have a replicative limit which turns them to early senescent</description>
                    <currentState>Quiescent</currentState>
                    <nextState>EarlySenescent</nextState>
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>true</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>EarlySenCountTime</name>
                    <description>Add 1 to early senescent counter</description>
                    <currentState>EarlySenescent</currentState>
                    <nextState>EarlySenescent</nextState>
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>false</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>TransitionToFullSenescence</name>
                    <description>Early senescent cells turn to fully senescent cells</description>
                    <currentState>EarlySenescent</currentState>
                    <nextState>Senescent</nextState>
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>true</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>ClearanceOfEarlySenescent</name>
                    <description>Removal of early senescent cells from population</description>
                    <currentState>EarlySenescent</currentState>
                    <nextState>EarlySenescent</nextState>
                    <gpu:reallocate>true</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>true</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>ClearanceOfSenescent</name>
                    <description>Removal of senescent cells from population</description>
                    <currentState>Senescent</currentState>
                    <nextState>Senescent</nextState>
                    <gpu:reallocate>true</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>true</gpu:RNG>                        <!-- optional -->
                </gpu:function>
                <gpu:function>
                    <name>DetectDamage</name>
                    <description>Quiescent cells migrate towards tissue damage. When found this func transitions the
                        fibroblast into repairation mode
                    </description>
                    <currentState>Quiescent</currentState>
                    <nextState>Repair</nextState>
                    <inputs>
                        <gpu:input>
                            <messageName>tissue_damage_report</messageName>
                        </gpu:input>
                    </inputs>
                    <gpu:reallocate>false</gpu:reallocate>          <!-- optional -->
                    <gpu:RNG>false</gpu:RNG>                        <!-- optional -->
                </gpu:function>
            </functions>
            <states>
                <gpu:state>
                    <name>Quiescent</name>
                    <description>A quiescent fibroblast</description>
                </gpu:state>
                <gpu:state>
                    <name>EarlySenescent</name>
                    <description>A pre-senescent fibroblast</description>
                </gpu:state>
                <gpu:state>
                    <name>Senescent</name>
                    <description>Senescent fibroblast</description>
                </gpu:state>
                <gpu:state>
                    <name>Proliferating</name>
                    <description>Cell undergoing division</description>
                </gpu:state>
                <gpu:state>
                    <name>Repair</name>
                    <description>Cell actively repairing a damaged tissue block</description>
                </gpu:state>
                <initialState>Quiescent</initialState>
            </states>
            <gpu:type>continuous</gpu:type>
            <gpu:bufferSize>1024</gpu:bufferSize>
        </gpu:xagent>
    </xagents>
    <messages>
        <gpu:message>
            <name>fibroblast_damage_report</name>
            <variables>
                <gpu:variable>
                    <type>int</type>
                    <name>id</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>x</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>y</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>z</name>
                </gpu:variable>
                <gpu:variable>
                    <type>int</type>
                    <name>damage</name>
                </gpu:variable>
            </variables>
            <gpu:partitioningSpatial>
                <gpu:radius>1</gpu:radius>
                <gpu:xmin>0.0</gpu:xmin>
                <gpu:xmax>10</gpu:xmax>
                <gpu:ymin>0.0</gpu:ymin>
                <gpu:ymax>10</gpu:ymax>
                <gpu:zmin>0.0</gpu:zmin>
                <gpu:zmax>10</gpu:zmax>
            </gpu:partitioningSpatial>
            <gpu:bufferSize>4096</gpu:bufferSize>
        </gpu:message>
        <gpu:message>
            <name>tissue_damage_report</name>
            <variables>
                <gpu:variable>
                    <type>int</type>
                    <name>id</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>x</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>y</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>z</name>
                </gpu:variable>
                <gpu:variable>
                    <type>int</type>
                    <name>damage</name>
                </gpu:variable>
            </variables>
            <gpu:partitioningSpatial>
                <gpu:radius>1</gpu:radius>
                <gpu:xmin>0.0</gpu:xmin>
                <gpu:xmax>10</gpu:xmax>
                <gpu:ymin>0.0</gpu:ymin>
                <gpu:ymax>10</gpu:ymax>
                <gpu:zmin>0.0</gpu:zmin>
                <gpu:zmax>10</gpu:zmax>
            </gpu:partitioningSpatial>
            <gpu:bufferSize>4096</gpu:bufferSize>
        </gpu:message>
        <gpu:message>
            <name>doublings</name>
            <variables>
                <gpu:variable>
                    <type>int</type>
                    <name>number</name>
                </gpu:variable>
            </variables>
            <gpu:partitioningNone/>
            <gpu:bufferSize>4096</gpu:bufferSize>
        </gpu:message>
        <gpu:message>
            <name>count</name>
            <variables>
                <gpu:variable>
                    <type>int</type>
                    <name>number</name>
                </gpu:variable>
            </variables>
            <gpu:partitioningNone/>
            <gpu:bufferSize>4096</gpu:bufferSize>
        </gpu:message>
        <gpu:message>
            <name>fibroblast_location_report</name>
            <variables>
                <gpu:variable>
                    <type>int</type>
                    <name>id</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>x</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>y</name>
                </gpu:variable>
                <gpu:variable>
                    <type>float</type>
                    <name>z</name>
                </gpu:variable>
                <gpu:variable>
                    <type>int</type>
                    <name>current_state</name>
                </gpu:variable>
            </variables>
            <gpu:partitioningSpatial>
                <gpu:radius>1</gpu:radius>
                <gpu:xmin>0.0</gpu:xmin>
                <gpu:xmax>10</gpu:xmax>
                <gpu:ymin>0.0</gpu:ymin>
                <gpu:ymax>10</gpu:ymax>
                <gpu:zmin>0.0</gpu:zmin>
                <gpu:zmax>10</gpu:zmax>
            </gpu:partitioningSpatial>
            <gpu:bufferSize>4096</gpu:bufferSize>
        </gpu:message>
    </messages>
    <layers>
        <layer>
            <gpu:layerFunction>
                <name>TissueTakesDamage</name>
            </gpu:layerFunction>
            <gpu:layerFunction>
                <name>QuiescentTakesDamage</name>
            </gpu:layerFunction>
        </layer>
        <layer>
            <gpu:layerFunction>
                <name>TissueSendDamageReport</name>
            </gpu:layerFunction>
        </layer>
        <layer>
            <gpu:layerFunction>
                <name>QuiescentMigration</name>
            </gpu:layerFunction>
            <gpu:layerFunction>
                <name>EarlySenescentMigration</name>
            </gpu:layerFunction>
            <gpu:layerFunction>
                <name>SenescentMigration</name>
            </gpu:layerFunction>
        </layer>
        <layer>
            <gpu:layerFunction>
                <name>TissueSendDamageReport</name>
            </gpu:layerFunction>
        </layer>
        <layer>
            <gpu:layerFunction>
                <name>BystanderEffect</name>
            </gpu:layerFunction>
            <gpu:layerFunction>
                <name>ExcessiveDamage</name>
            </gpu:layerFunction>
            <gpu:layerFunction>
                <name>ReplicativeSenescence</name>
            </gpu:layerFunction>
        </layer>
        <layer>
            <gpu:layerFunction>
                <name>TransitionToProliferating</name>
            </gpu:layerFunction>
        </layer>
        <layer>
            <gpu:layerFunction>
                <name>EarlySenCountTime</name>
            </gpu:layerFunction>
        </layer>
        <layer>
            <gpu:layerFunction>
                <name>TransitionToFullSenescence</name>
            </gpu:layerFunction>
        </layer>
        <layer>
            <gpu:layerFunction>
                <name>ClearanceOfEarlySenescent</name>
            </gpu:layerFunction>
        </layer>
        <layer>
            <gpu:layerFunction>
                <name>ClearanceOfSenescent</name>
            </gpu:layerFunction>
        </layer>
        <layer>
            <gpu:layerFunction>
                <name>DetectDamage</name>
            </gpu:layerFunction>
        </layer>
    </layers>
</gpu:xmodel>